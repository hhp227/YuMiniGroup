<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="#EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:splitMotionEvents="false">

    <ScrollView
            android:scrollbarStyle="outsideOverlay"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:splitMotionEvents="false">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:orientation="vertical"
                            android:background="#FFFFFF"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="120dp">

                        <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_marginTop="15dp">

                            <TextView
                                    android:ellipsize="end"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:text="아이디/학번"
                                    android:singleLine="true"/>

                            <TextView
                                    android:ellipsize="end"
                                    android:gravity="right|center_vertical|center_horizontal|center|end"
                                    android:id="@+id/tv_yu_id"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:singleLine="true"
                                    android:layout_weight="1"/>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                            android:background="@android:color/darker_gray"
                            android:layout_width="match_parent"
                            android:layout_height="2px"/>

                    <LinearLayout
                            android:orientation="vertical"
                            android:background="#FFFFFF"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:gravity="bottom|left|center_vertical|center_horizontal|center|start"
                                android:background="#EEEEEE"
                                android:paddingLeft="10dp"
                                android:paddingBottom="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:text="기본 정보"/>

                        <LinearLayout
                                android:orientation="vertical"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <LinearLayout
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_marginTop="15dp">

                                <TextView
                                        android:ellipsize="end"
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:text="이름"
                                        android:singleLine="true"/>

                                <TextView
                                        android:ellipsize="end"
                                        android:gravity="right|center_vertical|center_horizontal|center|end"
                                        android:id="@+id/tv_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:singleLine="true"/>

                            </LinearLayout>

                            <View
                                    android:background="@android:color/darker_gray"
                                    android:layout_width="match_parent"
                                    android:layout_height="2px"/>

                            <LinearLayout
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_marginTop="15dp">

                                <TextView
                                        android:ellipsize="end"
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:text="소속"
                                        android:singleLine="true"/>

                                <TextView
                                        android:ellipsize="end"
                                        android:gravity="right|center_vertical|center_horizontal|center|end"
                                        android:id="@+id/tv_dept"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:singleLine="true"/>

                            </LinearLayout>

                            <View
                                    android:background="@android:color/darker_gray"
                                    android:layout_width="match_parent"
                                    android:layout_height="2px"/>

                            <LinearLayout
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_marginTop="15dp">

                                <TextView
                                        android:ellipsize="end"
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:text="학년"
                                        android:singleLine="true"/>

                                <TextView
                                        android:ellipsize="end"
                                        android:gravity="right|center_vertical|center_horizontal|center|end"
                                        android:id="@+id/tv_grade"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:singleLine="true"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                            android:background="@android:color/darker_gray"
                            android:layout_width="match_parent"
                            android:layout_height="2px"/>

                    <LinearLayout
                            android:orientation="vertical"
                            android:background="#FFFFFF"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:gravity="bottom|left|center_vertical|center_horizontal|center|start"
                                android:background="#EEEEEE"
                                android:paddingLeft="10dp"
                                android:paddingBottom="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:text="추가 정보"/>

                        <LinearLayout
                                android:orientation="vertical"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <LinearLayout
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_marginTop="15dp">

                                <TextView
                                        android:ellipsize="end"
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:text="이메일"
                                        android:singleLine="true"/>

                                <TextView
                                        android:gravity="right|center_vertical|center_horizontal|center|end"
                                        android:id="@+id/tv_email"
                                        android:background="@android:color/transparent"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:singleLine="true"
                                        android:drawablePadding="15dp"
                                        android:layout_weight="1"/>

                            </LinearLayout>

                            <View
                                    android:background="@android:color/darker_gray"
                                    android:layout_width="match_parent"
                                    android:layout_height="2px"/>

                            <LinearLayout
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_marginTop="15dp">

                                <TextView
                                        android:ellipsize="end"
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:text="연락처"
                                        android:singleLine="true"/>

                                <TextView
                                        android:gravity="right|center_vertical|center_horizontal|center|end"
                                        android:id="@+id/tv_phone_num"
                                        android:background="@android:color/transparent"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:text=""
                                        android:singleLine="true"
                                        android:drawablePadding="15dp"
                                        android:layout_weight="1"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                            android:background="@android:color/darker_gray"
                            android:layout_width="match_parent"
                            android:layout_height="2px"/>

                </LinearLayout>

                <FrameLayout
                        android:layout_gravity="top|center_vertical|center_horizontal|center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                    <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/iv_profile_image"
                            android:background="@android:color/transparent"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/profile_img_circle"
                            android:scaleType="centerCrop"/>

                    <ImageView
                            android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end"
                            android:id="@+id/btn_profile_change"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/profile_add"/>

                </FrameLayout>

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

    <Button
            android:id="@+id/b_sync"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="동기화"/>

</LinearLayout>